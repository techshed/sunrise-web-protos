<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Harp, Gulp And BrowserSync</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" href="styles/core.css">
</head>
<body>

  <div class="Header hidden-xs">

    <div class="Header-top">

      <div class="Header-logo pull-left">
        <a ui-sref="storeFront" hd-track-click="Header - Logo">
          <div class="Header-logo-img"></div>
        </a>
      </div>

      <div class="Header-fulfillment pull-left">
        <div class="dropdown HeaderDropdown" on-toggle="toggled(open)">
          <a href class="dropdown-toggle HeaderDropdown-fulfillmentTitle">
            <i class="fa fa-caret-down pull-right"></i>
            Pickup in {{ currentStore.city }}
          </a>
          <ul class="dropdown-menu dropdown-menu--light">
            <li class="list-item" ng-repeat="store in stores | limitTo: 5"
                ng-click="selectStore(store)">
              <h5>{{ store.city }} <small> {{ store.storeId }} </small></h5>
            </li>
            <li class="divider"></li>
            <li class="list-item">
              <h5 ui-sref="storeFinder">
                Change store
              </h5>
            </li>
          </ul>
        </div>
      </div>


      <div>
        <nav class="Header-tools pull-left hidden-sm">
          <ul class="Header-toolsList">
            <li class="list-item" ui-sref="purchaseHistory" hd-track-click="Navigation - Purchases">
              <i class="fa fa-book pull-left"></i>
              Purchases
            </li>
            <li class="list-item" ui-sref="lists" hd-track-click="Navigation - Lists">
              <i class="fa fa-list pull-left"></i>
              Lists
            </li>
            <li class="list-item" ui-sref="storeFinder" hd-track-click="Navigation - Store Finder">
              <i class="fa fa-location-arrow pull-left"></i>
              Store Finder
            </li>
          </ul>
        </nav>
        <nav class="Header-tools pull-left visible-sm">
          <div class="dropdown HeaderDropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-caret-down pull-right"></i>
              Tools
            </a>
            <ul class="dropdown-menu dropdown-menu--dark">
              <li class="list-item" ui-sref="purchaseHistory" hd-track-click="Navigation - Purchases">
                <i class="fa fa-book pull-left"></i>
                Purchases
              </li>
              <li class="list-item" ui-sref="lists" hd-track-click="Navigation - Lists">
                <i class="fa fa-list pull-left"></i>
                Lists
              </li>
              <li class="list-item" ui-sref="storeFinder" hd-track-click="Navigation - Store Finder">
                <i class="fa fa-location-arrow pull-left"></i>
                Store Finder
              </li>
            </ul>
          </div>
        </nav>
      </div>


      <div class="Header-login pull-right">
        <div>
          <ul class="AccountMenu-list text-right">
            <li class="AccountMenu-list-item">
              Help
            </li>
            <li class="AccountMenu-list-item AccountMenu-list-divider">
              |
            </li>
            <li class="AccountMenu-list-item">
              <a class="AccountMenu-openTray"
                 ng-show="user"
                 ng-click="openTray()"
                 hd-track-click="Navigation - Account">
                  Hi, {{ user.fullName }}
              </a>
              <a ng-hide="user"
                 ui-sref="login()"
                 class="AccountMenu-signInButton"
                 hd-track-click="Navigation - Login">
                  Sign-in
              </a>
            </li>
          </ul>
        </div>
        <div class="AccountMenu" ng-class="{ 'AccountMenu--shown': open }">
          <ul class="AccountMenu-list text-left">
            <li class="AccountMenu-list-item">
              Account profile
            </li>
            <li class="AccountMenu-list-item">
              <a class="AccountMenu-logout"
                 ng-click="logout()"
                 hd-track-click="Navigation - Logout">
                  Logout
              </a>
            </li>
            <li class="AccountMenu-list-item pull-right">
              <i class="fa fa-times"
                 ng-click="closeTray()"
                 hd-track-click="Navigation - Close Account Menu">
              </i>
            </li>
          </ul>
        </div>
      </div>


    </div>

    <div class="Header-bottom">

      <div hd-hover-scroll-block class="Header-category pull-left">
        <div class="dropdown" on-toggle="toggled(open)">
          <!-- dropdown button -->
          <a href class="dropdown-toggle">
            <i class="fa fa-caret-down pull-right"></i>
            Departments
          </a>
          <div class="CategoryDropDown dropdown-menu clearfix" ng-class="{ 'CategoryDropDown--showSubCategories' : showSubcategories }">
            <!-- categories -->
            <div class="CategoryDropDown-categories pull-left">
              <ul>
                <li class="CategoryDropDown-categoryItem">
                  {{ category.title }}
                </li>
              </ul>
            </div>
            <!-- subcategories -->
            <div class="CategoryDropDown-subcategories pull-left" ng-show="showSubcategories">
              <ul>
                <li class="CategoryDropDown-subCategoryItem"
                    ng-repeat="subcategory in subcategories"
                    ng-click="directToCategory(subcategory.id)">
                  {{ subcategory.title }}
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>


      <div class="Header-search">
        <div class="search-desktop" data-placeholder="Search Products"></div>
      </div>

      <div class="Header-cart">
        <i class="fa fa-shopping-cart"></i>
        View cart ({{ cartModel.itemCount }})
      </div>
      <div hd-cart ng-show="showCart"></div>

    </div>

  </div>





</body>
</html>