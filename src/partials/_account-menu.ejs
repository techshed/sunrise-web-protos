<div class="Header-login pull-right">
  <div>
    <ul class="AccountMenu-list text-right">
      <li class="AccountMenu-list-item">
        Help
      </li>
      <li class="AccountMenu-list-item AccountMenu-list-divider">
        |
      </li>
      <li class="AccountMenu-list-item">
        <a class="AccountMenu-openTray"
           ng-show="user"
           ng-click="openTray()"
           hd-track-click="Navigation - Account">
            Hi, {{ user.fullName }}
        </a>
        <a ng-hide="user"
           ui-sref="login()"
           class="AccountMenu-signInButton"
           hd-track-click="Navigation - Login">
            Sign-in
        </a>
      </li>
    </ul>
  </div>
  <div class="AccountMenu" ng-class="{ 'AccountMenu--shown': open }">
    <ul class="AccountMenu-list text-left">
      <li class="AccountMenu-list-item">
        Account profile
      </li>
      <li class="AccountMenu-list-item">
        <a class="AccountMenu-logout"
           ng-click="logout()"
           hd-track-click="Navigation - Logout">
            Logout
        </a>
      </li>
      <li class="AccountMenu-list-item pull-right">
        <i class="fa fa-times"
           ng-click="closeTray()"
           hd-track-click="Navigation - Close Account Menu">
        </i>
      </li>
    </ul>
  </div>
</div>
